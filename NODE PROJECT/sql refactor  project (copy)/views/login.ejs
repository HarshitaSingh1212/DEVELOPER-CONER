<body id="loginContainer">
    <h1 id="rapid-heading">Rapid Page Builder</h1>
    <div class="div1">
        <div class="border border-3 form-container p-5">
            <h2>Login</h2>
            <form action = "/login" method = "post" style="font-weight: 300; font-size: 14px;">
                <div class ="form-group mt-2">
                    <label for="email" class="d-block">Email<span style="color: red;">*</span></label>
                    <input type="text" class="p-1" id="email" class="border-thick" name="email" placeholder="Enter your email" required autocomplete="off">
                   </div>
                   <div class ="form-group  mt-2">
                       <label for="password" class="d-block">Password<span style="color: red;">*</span></label>
                       <input type="password" class="p-1" id="password" name="password" placeholder="password" required autocomplete="off">
                      </div>
                   <button type="submit" class="submit-btn btn btn-primary mt-3 px-3">Login</button>
            </form>
            <p>Don't have an account? <a href="/signup" onclick="">Signup</a></p>
        </div>
    </div>
    <script>

        
        $.ajax({
            url: 'http://localhost:5000/login',
            type: 'POST',
            data: JSON.stringify(),
            headers: {
                'Content-Type': 'application/json'
            },
            success: function(data){

            }
        })
    </script>
</body>
</html>