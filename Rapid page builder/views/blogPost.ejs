<!-- blogPost.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,wght@0,400;0,700;1,400;1,700&display=swap" rel="stylesheet">

    <title><%= blogPost.title %></title>
</head>
<body class="bg-dark text-light">
    <div class="container text-center d-flex justify-content-center align-items-center bg-secondary text-white"style="height:100vh">
        <header class="m-5">
            <h1 style="font-family: elsie; font-size: 10rem;"><%= blogPost.title %></h1>
            <h2 class="mt-5"><%= blogPost.subtitle %></h2>
            <p>Author: <%= blogPost.author %></p>
            <a href="/allBlogs" class="text-info">Back to all blogs</a>
        </header>
        <main class="bg-light text-dark m-5 ms-1 p-5">
            <%- blogPost.editorContent %>
             <a href="<%=linkview %>">View</a>
             <a href="<%=linkdownload %>">Download</a>
        </main>
        <footer class="mt-5 mb-5">
            
        </footer>
    </div>
    </body>
</html>
